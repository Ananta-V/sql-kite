{
  "name": "sql-kite",
  "version": "1.0.0",
  "description": "A local SQLite database management platform with a Studio UI",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:cli": "npm run dev -w packages/cli",
    "dev:server": "npm run dev -w packages/server",
    "dev:studio": "npm run dev -w packages/studio",
    "build:studio": "npm run build -w packages/studio",
    "build": "npm run build:studio",
    "link:cli": "npm link -w packages/cli",
    "sql-kite": "node packages/cli/bin/sql-kite.js",
    "ports": "node packages/cli/bin/sql-kite.js ports",
    "sql-kite:ports": "node packages/cli/bin/sql-kite.js ports"
  }
}